@model Chacrutaria.Models.Categoria

@{
    ViewData["Title"] = "Consulta";
}

<h1>Consulta</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Categoria")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Descrição")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoriaId">Editar</a> |
    <a asp-action="Index">Retornar</a>
</div>
