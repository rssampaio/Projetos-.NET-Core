@model LoginViewModel

<table>
    <tr>
        @*<td><img src="~/images/registro1.jpg" alt="Registrar Usuário" class="center-block" /></td>*@
        <td>
            <div class="row loginForm">
                <div class="col-md-12" style="position:relative">
                    <h4 class="text-center">Registrar Usuário</h4>
                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div class="form-group">
                            <label asp-for="UserEmail" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="UserEmail" class="form-control" />
                                <span asp-validation-for="UserEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group pull-right formPullRightButton">
                            <div class="col-md-2">
                                <input type="submit" class="btn" style="Background: black; color:gold; width: 300px;" value="Registrar" />
                            </div>
                            <div class="col-md-">
                                <a class="nav-link" asp-controller="Home" asp-action="Loja" style="color:blue">&nbsp;Retornar para a Loja&nbsp; </a>
                            </div>
                        </div>
                        <div class="col-md-12 text-danger">
                            @Html.ValidationMessage("senha.invalido")
                        </div>
                        <div class="col-md-12 text-danger">
                            @Html.ValidationMessage("senha1.invalido")
                        </div>
                        <div class="col-md-12 text-danger">
                            @Html.ValidationMessage("senha2.invalido")
                        </div>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>
