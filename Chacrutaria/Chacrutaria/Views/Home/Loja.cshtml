<!DOCTYPE html>
<html>

<head>
    <style>
        p {
            font: bold 54px times new roman;
        }

        h3 {
            font: bold 28px times new roman;
        }
    </style>
</head>

@model HomeViewModel

<body>

    <br />

    @await Html.PartialAsync("_Carousel")

