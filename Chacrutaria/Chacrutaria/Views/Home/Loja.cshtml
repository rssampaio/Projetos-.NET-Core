    <br />

    <div>
        <h3 class="text-center">Produtos em Destaque</h3>
    </div>

    <br />

    <div class="row">
        @foreach (var produto in Model.ProdutosPreferidos)
        {
            <partial name="_ProdutosResumo" for="@produto" />
        }
    </div>

</body>

</html>