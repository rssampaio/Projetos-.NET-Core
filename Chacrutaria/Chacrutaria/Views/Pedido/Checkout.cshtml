        </div>
    </div>*@
    <div class="form-group">
        <label asp-for="Endereco" class="col-sm-4 control-label"></label>
        <div class="col-sm-8">
            <input asp-for="Endereco" class="form-control" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Complemento" class="col-md-4 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Complemento" class="form-control" />
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Cep" class="col-md-4 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Cep" class="form-control" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Cidade" class="col-md-4 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UF" class="col-md-4 control-label"></label>
        <div class="col-md-5">
            <input asp-for="UF" class="form-control" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Fone1" class="col-md-2 control-label"></label>
