<form asp-action="Checkout" method="post" class="form-text" role="form">
    <div class="form-check form-check-inline">
        <label asp-for="Nome" class="col-sm-1 control-label"></label>
        <div class="col-sm-4">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <label asp-for="Sobrenome" class="col-sm-2 control-label"></label>
        <div class="col-sm-7">
            <input asp-for="Sobrenome" class="form-control" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
    </div>
