@model Produto

    <div class="container marginTop">
        <div class="row">
            <div class="card border-0">
                <div class="text-center view overlay hm-white-slight">
                    <img src="@Model.ImagemUrl" class="img-fluid" alt="">
                    <a href="#">
                        <div class="mask waves-effect waves-light"></div>
                    </a>
                </div>
                <div class="card-block">
                    <!--Title-->
                    <h2 class="card-title">@Model.Nome</h2>
                    <!--Text-->
                    <p class="card-text"><h5>@Model.DescDetalhada</h5></p>
                    <p class="btn btn-group align-content-lg-end">
                        <a asp-controller="Produto" asp-action="ListaProduto" class="btn btn-outline-info">Ver todos os produtos</a>
                    </p>
                    <p class="btn btn-group align-content-lg-end">
                        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra" asp-route-produtoId="@Model.ProdutoId">
                            Adicionar @Model.Nome ao carrinho
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>