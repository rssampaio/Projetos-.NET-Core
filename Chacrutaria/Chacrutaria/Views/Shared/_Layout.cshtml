<!DOCTYPE html>
<html lang="br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grande Charcutaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Loja" style="color:gold">Charcutaria</a>
                    @await Component.InvokeAsync("CategoriaMenu")
                    <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index" style="color:gold">Contato</a>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index" style="color:gold">Administrador</a>
                    }
                    @await Component.InvokeAsync("CarrinhoCompraResumo")

                </div>
                <form class="navbar-form navbar-right" asp-controller="Produto" asp-action="Search" method="get">
                    <div class="form-group" style="margin-top:15px">
                        <input type="text" class="form-control" placeholder="Buscar produto" name="searchString" value="@ViewData["searchString"]">
                    </div>
                </form>
                <div>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
