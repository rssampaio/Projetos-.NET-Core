@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <a href="javascript:document.getElementById('logoutForm').submit()" style="color:gold">&nbsp;Log-out&nbsp;&nbsp;&nbsp;</a>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <a class="nav-link" asp-controller="Account" asp-action="Login" style="color:gold">&nbsp;Log-in&nbsp; </a>
        <a class="nav-link" asp-controller="Account" asp-action="Register" style="color:gold">&nbsp;Registro&nbsp;&nbsp;</a>
    </ul>
}
