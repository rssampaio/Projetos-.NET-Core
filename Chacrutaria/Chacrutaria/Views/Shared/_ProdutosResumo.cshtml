@model Produto

<div class="col-sm-3 col-lg-3 col-md-3 col-xl-3">

    <div class="img-thumbnail">
        <img src="@Model.ImagemUrl" class="img-rounded" alt="" width="200" height="200" />
    </div>

    <div class="figure-caption">
        <h4 class="text-right"> @Model.Preco.ToString("c")</h4>
        <h5>
            <a asp-controller="Produto" asp-action="Details" asp-route-produtoId="@Model.ProdutoId">@Model.Nome</a>
        </h5>
        <p style="font: bold 16px times new roman">@Model.Descricao</p>
    </div>
    <div text-right">
        <p class="formPullRightButton">
            <a class="btn" asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra" asp-route-produtoId="@Model.ProdutoId"
               style="background-color:black; color:gold">
                Adicionar à cesta
            </a>
        </p>
    </div>
</div>
