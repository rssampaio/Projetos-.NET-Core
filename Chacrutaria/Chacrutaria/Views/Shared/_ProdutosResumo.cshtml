@model Produto
 
<div class="col-sm-3 col-lg-3 col-md-3 col-xl-3">

    <div class="img-thumbnail">
        <img src="@Model.ImagemUrl" class="img-rounded" alt="" />
    </div>

    <div class="figure-caption">
        <h4 class="text-right"> @Model.Preco.ToString("c")</h4>
        <h5>
            @Model.Nome
        </h5>
        <p>@Model.Descricao</p>
    </div>

    </div>