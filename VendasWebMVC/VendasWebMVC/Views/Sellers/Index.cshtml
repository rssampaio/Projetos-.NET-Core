@model IEnumerable<VendasWebMVC.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                @Html.Label("Nome")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                @Html.Label("E-mail")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.BirthDate)*@
                @Html.Label("Data Nascimento")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.BaseSalary)*@
                @Html.Label("Salário Base")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
